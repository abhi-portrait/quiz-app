<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <EditText
        android:id="@+id/admineditText1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Question"
        android:padding="20dp" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/admineditText2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Answer 1"
        android:padding="20dp" />

    <EditText
        android:id="@+id/admineditText3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Answer 2"
        android:padding="20dp" />

    <EditText
        android:id="@+id/admineditText4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Answer 3"
        android:padding="20dp" />

    <EditText
        android:id="@+id/admineditText5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Answer 4"
        android:padding="20dp" />

    <Spinner
        android:id="@+id/adminspinner1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:entries="@array/opt"
         />

    <Button
        android:id="@+id/adminbutton1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="submit"
        android:onClick="submit" />

</LinearLayout>
    
    
</ScrollView>