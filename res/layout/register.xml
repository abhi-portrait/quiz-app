<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    
    
  
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp" >

    <TextView
        android:id="@+id/regtextView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:gravity="center"
        android:typeface="serif"
        android:layout_marginTop="20dp"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/regeditText1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Username"
        android:padding="20dp" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/regeditText2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Password"
        android:padding="20dp"
        android:inputType="textPassword" />

    <Spinner
        android:id="@+id/regspinner1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/subject" 
        android:padding="20dp"/>

    <EditText
        android:id="@+id/regeditText3"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        
        android:hint="Address Here"
        android:inputType="textPostalAddress" />

    <EditText
        android:id="@+id/regeditText4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Mobile "
        android:ems="10"
        android:padding="20dp"
        android:inputType="number" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:orientation="horizontal"
        android:padding="20dp">

        <Button
            android:id="@+id/regbutton1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:onClick="submit" 
            android:layout_weight="1"/>

        <Button
            android:id="@+id/regbutton2"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reset" 
            android:onClick="submit"/>

    </LinearLayout>

</LinearLayout>
    
    
</ScrollView>